<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black80</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black80</item>
    </style>

    <style name="ProgressLoader" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
        <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/white</item>
    </style>

</resources>
